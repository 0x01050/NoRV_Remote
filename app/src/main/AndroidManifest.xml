<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.norv.remote">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    <uses-permission android:name="android.permission.ACTION_MANAGE_OVERLAY_PERMISSION" />

    <application
        android:name="com.norv.remote.NoRVApp"
        android:label="@string/app_name"
        android:icon="@mipmap/launcher"
        android:roundIcon="@mipmap/launcher_round"
        android:theme="@style/AppTheme"
        android:allowBackup="true" >
        <activity
            android:name="com.norv.remote.NoRVActivity"
            android:label="@string/norv_activity_title"
            android:screenOrientation="landscape"
            android:windowSoftInputMode="adjustResize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.norv.remote.NoRVConfirm"
            android:label="@string/norv_confirm_title"
            android:screenOrientation="landscape" />
        <activity
            android:name="com.norv.remote.NoRVPause"
            android:label="@string/norv_pause_title"
            android:screenOrientation="landscape" />
        <activity
            android:name="com.norv.remote.NoRVEnd"
            android:label="@string/norv_end_title"
            android:screenOrientation="landscape" />
        <service
            android:name="com.norv.remote.NoRVRTMP"
            android:enabled="true"
            android:exported="false" />
    </application>

</manifest>