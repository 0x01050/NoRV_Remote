<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/norv_loading_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#037558"
    tools:context=".NoRVLoading">

    <ImageView
        android:id="@+id/loading_icon"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:contentDescription="@string/loading_title"
        app:layout_constraintBottom_toTopOf="@+id/loading_label"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/launcher" />

    <TextView
        android:id="@+id/loading_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/loading_title"
        android:textColor="#FFFFFF"
        android:textSize="60sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/loading_icon" />
</androidx.constraintlayout.widget.ConstraintLayout>